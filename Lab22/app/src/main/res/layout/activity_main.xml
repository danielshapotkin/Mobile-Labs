<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RadioGroup
            android:id="@+id/radioGroupTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioHot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Горячий" />

            <RadioButton
                android:id="@+id/radioCold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Холодный" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageViewTemperature"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/checkMilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Молоко" />

        <CheckBox
            android:id="@+id/checkCream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сливки" />

        <CheckBox
            android:id="@+id/checkSugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сахар" />

        <CheckBox
            android:id="@+id/checkSyrup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сироп" />

        <Spinner
            android:id="@+id/spinnerDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonDeliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Доставить" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>